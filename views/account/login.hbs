<!DOCTYPE html>
<html>

<head>
  {{>head}}
</head>

<body class="hold-transition login-page" style="background-color: #f6f6f6;">
  <div class="login-box" style="background-color: #f6f6f6">
    <div class="login-logo">

      <a>
        <div class="user-panel" style="padding:0px">
          <div class="image">
            <img src="/img/GAIA3.png" class="img-preview" alt="User Image" style="max-width: 150px">
          </div>
        </div>
        <div class="user-panel" style="padding:0px;font-size: 25px">
        <small>Help CSR run better1!</small>
        </div>
      </a>
    </div>
    <!-- /.login-logo -->
    <div class="login-box-body">
      <p class="login-box-msg">Sign in to Start</p>

      <form action="/dashboard" method="post">
        <div class="form-group">
          <input type="text" class="form-control" placeholder="Please input your register name" name="form-email">
          <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
        </div>
        <div class="form-group has-feedback">
          <input type="password" class="form-control" placeholder="Password" name="form-password">
          <span class="glyphicon glyphicon-lock form-control-feedback"></span>
        </div>
        <div class="row">
          <div class="col-xs-8">
            <div class="checkbox icheck">
              <label>
                <input type="checkbox" name="form-checkbox"> Remember Me
              </label>
            </div>
          </div>
          <!-- /.col -->
          <div class="col-xs-4">
            <button type="submit" class="btn btn-primary btn-block btn-flat">Sign In</button>
          </div>
          <!-- /.col -->
        </div>
      </form>
      <!-- /.social-auth-links -->

      <a href="#">I forgot my password</a><br>
      <a href="/account/register" class="text-center">Register a new membership</a>

    </div>
    <!-- /.login-box-body -->
  </div>
  <!-- /.login-box -->

  <!-- jQuery 3 -->

  <script>
    $(function () {
      $('input').iCheck({
        checkboxClass: 'icheckbox_square-blue',
        radioClass: 'iradio_square-blue',
        increaseArea: '20%' /* optional */
      });

    });
  </script>
</body>

</html>